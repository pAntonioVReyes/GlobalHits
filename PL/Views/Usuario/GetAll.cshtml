@model ML.Usuario
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>


<div class="container" style="text-align:center;">
    <h1>Usuarios</h1>
    <br />
    <hr />

    <div class="input-group">
        <button class="btn btn-success" type="submit" href="@Url.Action("Form","Usuario", new { area="" })">
            <i class="bi bi-person-check-fill"></i> Añadir
        </button>
    </div>
</div>

<div class="container table-responsive" style="text-align:center;">

    <div class="table">
        <table class="table-dark table-bordered, table-hover">
            <thead>
                <tr>
                    <th scope="col">EDITAR</th>
                    <th scope="col" hidden>IdUsuario</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">ApellidoPaterno</th>
                    <th scope="col">ApellidoMaterno</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Edad</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">FechaIngreso</th>
                    <th scope="col">Salario</th>
                    <th scope="col" hidden>IdSucursal</th>
                    <th scope="col">Sucursal</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                @foreach(ML.Usuario usuarios in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <a class="btn btn-warning" type="button" href="@Url.Action("Form", "Usuario", new { idUsuario = usuarios.IdUsuario })">
                                <i class="bi bi-gear-fill"></i>
                            </a>
                        </td>
                        <td hidden>@usuarios.IdUsuario</td>
                        <td>@usuarios.Nombre</td>
                        <td>@usuarios.ApellidoPaterno</td>
                        <td>@usuarios.ApellidoMaterno</td>
                        <td>@usuarios.Direccion</td>
                        <td>@usuarios.Edad</td>
                        <td>@usuarios.Telefono</td>
                        <td>@usuarios.Sexo</td>
                        <td>@usuarios.FechaIngreso</td>
                        <td>@usuarios.Salario</td>
                        <td hidden>@usuarios.Sucursal.IdSucursal</td>
                        <td>@usuarios.Sucursal.Nombre</td>
                        <td>
                            <a class="btn btn-danger" type="button" href="@Url.Action("Delete", "Usuario", new { idUsuario = usuarios.IdUsuario })" onclick="return confirm('Estas seguro de dar de baja al usuario?');">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
